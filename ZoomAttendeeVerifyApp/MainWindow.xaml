<Window x:Class="ZoomAttendeeVerifyApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Zoom Attendee Verifier" Height="350" Width="525">

    <Border Padding="20">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Orientation="Vertical" >

            <!-- Row 1: Salesforce File -->
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="Images/salesforce.png" Width="32" Height="32" VerticalAlignment="Center" Margin="0 0 10 0"/>
                
                <TextBox x:Name="SalesforceFilePath"
                         Grid.Column="1"
                         IsReadOnly="True"
                         Background="#EEE"
                         Margin="0 0 10 0"
                         VerticalAlignment="Center"/>

                <Button Grid.Column="2" Width="30" Height="30" Click="BrowseSalesforce_Click">...</Button>
            </Grid>

            <!-- Row 2: Zoom File -->
            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="Images/zoom.png" Width="32" Height="32" VerticalAlignment="Center" Margin="0 0 10 0"/>

                <TextBox x:Name="ZoomFilePath"
                         Grid.Column="1"
                         IsReadOnly="True"
                         Background="#EEE"
                         Margin="0 0 10 0"
                         VerticalAlignment="Center"/>

                <Button Grid.Column="2" Width="30" Height="30" Click="BrowseZoom_Click">...</Button>
            </Grid>

            <!-- Compare Button -->
            <Button Content="Compare"
                    Height="40"
                    FontSize="16"
                    HorizontalAlignment="Stretch"
                    />
        </StackPanel>
    </Border>
</Window>
