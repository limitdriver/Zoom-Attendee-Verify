<Window x:Class="ZoomAttendeeVerifyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoom Attendee Verifier" Height="700" Width="800"
        Background="#253438">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Top controls (title, file pickers, buttons) -->
            <RowDefinition Height="Auto"/>
            <!-- OutputTextBox -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid fills remaining space -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top controls -->
        <StackPanel Grid.Row="0" Margin="20" MaxWidth="600" Orientation="Vertical">
            <!-- Title -->
            <TextBlock Text="Zoom Attendee Verifier"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <!-- Row 1: Salesforce File -->
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="Images/Salesforce_Logo.png" Width="32" Height="32" VerticalAlignment="Center" Margin="0 0 10 0"/>

                <TextBox x:Name="SalesforceFileTextbox"
                         Grid.Column="1"
                         IsReadOnly="True"
                         Background="#EEE"
                         Margin="0 0 10 0"
                         VerticalAlignment="Center"/>

                <Button Grid.Column="2" Width="30" Height="30" Click="BrowseSalesforce_Click">...</Button>
            </Grid>

            <!-- Row 2: Zoom File -->
            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="Images/Zoom_Logo_Bloom_RGP.png" Width="32" Height="32" VerticalAlignment="Center" Margin="0 0 10 0"/>

                <TextBox x:Name="ZoomFileTextbox"
                         Grid.Column="1"
                         IsReadOnly="True"
                         Background="#EEE"
                         Margin="0 0 10 0"
                         VerticalAlignment="Center"/>

                <Button Grid.Column="2" Width="30" Height="30" Click="BrowseZoom_Click">...</Button>
            </Grid>

            <!-- Compare Button -->
            <Button Content="Compare"
                    Height="40"
                    FontSize="16"
                    HorizontalAlignment="Stretch"
                    MaxWidth="200"
                    Click="Compare_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2"
                  x:Name="AttendeeDataGrid"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="True"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Margin="100, 20, 100, 20"
                  MaxWidth="1200"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <!-- Error column (images can be added later) -->
                <!--
                <DataGridTextColumn Header="Error" Binding="{Binding Error}" Width="80"/>
                -->
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="*"/>
                <DataGridTextColumn Header="Salesforce" Binding="{Binding InSalesforce}" Width="80"/>
                <DataGridTextColumn Header="Zoom" Binding="{Binding InZoom}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
