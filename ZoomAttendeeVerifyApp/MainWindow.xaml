<Window x:Class="ZoomAttendeeVerifyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ZoomAttendeeVerifyApp"
        Icon="Images/tick.png"
        Title="Zoom Attendee Verifier" Height="700" Width="800"
        Background="#2D3B4E">

    <Window.Resources>

        <local:BoolToTickCrossConverter x:Key="BoolToTickCrossConverter"/>
        

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Style.Setters>
                <Setter Property="Background" Value="#4A90E2"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderBrush" Value="#4A90E2"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Width" Value="120"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3E4A59"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <!-- Increased height -->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style x:Key="ModernDataGridHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3A4E67"/>
            <!-- Lighter background color -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <!-- Highlight when hovering over the header -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A90E2"/>
                    <!-- Highlight color on hover -->
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Row Style -->
        <Style x:Key="ModernDataGridRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="#2E3C4D"/>
            <!-- Lighter background for rows -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4A90E2"/>
                    <!-- Color when selected -->
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <!-- Hover effect on rows -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A4E67"/>
                    <!-- Slight highlight on row hover -->
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- Top controls -->
        <StackPanel Grid.Row="0" Margin="20" MaxWidth="600" Orientation="Vertical">
            <TextBlock Text="Zoom Attendee Verifier"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <!-- Salesforce File Row -->
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Width="120">
                    <Image Source="Images/Salesforce_Logo.png" Stretch="Uniform" Height="200" VerticalAlignment="Center" Margin="-40"/>
                </Grid>

                <!-- Ensure Image Source path is correct -->
                

                <TextBox x:Name="SalesforceFileTextbox" Grid.Column="1" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                <Button Grid.Column="2" Width="40" Height="40" Style="{StaticResource ModernButton}" Click="BrowseSalesforce_Click">...</Button>
            </Grid>

            <!-- Zoom File Row -->
            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Width="120">

                    <!-- Ensure Image Source path is correct -->
                    <Image Source="Images/Zoom_Logo_Bloom_RGB.png" Stretch="Uniform" VerticalAlignment="Center" Margin="10"/>
                </Grid>
                

                <TextBox x:Name="ZoomFileTextbox" Grid.Column="1" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                <Button Grid.Column="2" Width="40" Height="40" Style="{StaticResource ModernButton}" Click="BrowseZoom_Click">...</Button>
            </Grid>

            <Button Content="Compare"
                    Height="40"
                    HorizontalAlignment="Stretch"
                    MaxWidth="200"
                    Style="{StaticResource ModernButton}"
                    Click="Compare_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2"
                  x:Name="AttendeeDataGrid"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="True"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Margin="20"
                  MaxWidth="1000"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  RowStyle="{StaticResource ModernDataGridRow}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" HeaderStyle="{StaticResource ModernDataGridHeader}"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*" HeaderStyle="{StaticResource ModernDataGridHeader}"/>
                <DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="*" HeaderStyle="{StaticResource ModernDataGridHeader}"/>

                <DataGridTemplateColumn Header="Salesforce" HeaderStyle="{StaticResource ModernDataGridHeader}" Width="80" SortMemberPath="InSalesforce">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding InSalesforce, Converter={StaticResource BoolToTickCrossConverter}}" Width="20" Height="20"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Zoom" HeaderStyle="{StaticResource ModernDataGridHeader}" Width="80" SortMemberPath="InZoom">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding InZoom, Converter={StaticResource BoolToTickCrossConverter}}" Width="20" Height="20"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
